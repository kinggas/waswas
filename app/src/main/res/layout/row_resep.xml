<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="5dp"
    android:background="@drawable/background_shadow">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:rowCount="3"
        android:columnCount="2">

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            app:cardCornerRadius="5dp"
            >

        <ImageView
            android:id="@+id/img_resep"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="310dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_row="0"
            android:layout_column="1">

            <TextView
                android:id="@+id/txt_nama_resep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Makanan Dicoba sampai mentok gan"
                android:textSize="16dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/colorPureHitam"
                android:clickable="true"
                android:onClick="showDetailRecipe"
                />

            <TextView
                android:id="@+id/txt_deskripsi_resep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:textSize="12dp"
                android:text="Makanan ini terbuat dari Kelepon dibikin mentok juga gkok"
                android:layout_row="2"
                android:layout_column="0" />

            <TextView
                android:id="@+id/txt_kalori_resep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:textSize="12dp"
                android:text="200 kkal"
                android:layout_row="2"
                android:layout_column="0" />



        </LinearLayout>



    </GridLayout>

</androidx.cardview.widget.CardView>